{
  "name": "voting-app-node",
  "description": "Voting app node project made for freeCodeCamp",
  "version": "0.1.0-alpha.6",
  "main": "index.js",
  "repository": "git@github.com:azdanov/voting-app-node.git",
  "author": "Anton Zdanov <azdanov@protonmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=9.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,css,scss}": [
      "yarn format",
      "git add"
    ]
  },
  "scripts": {
    "clean": "rimraf ./public/dist ./build",
    "build": "npm-run-all --parallel build:**",
    "start": "node ./public/dist/index.js",
    "develop": "cross-env NODE_ENV=test npm-run-all --parallel watch:**",
    "build:server": "parcel build src/index.ts --out-dir public/dist --target node",
    "build:client": "parcel build src/client/client.ts --out-dir public/dist --target browser",
    "build:styles": "parcel build src/styles/style.scss --out-dir public/dist --target browser",
    "watch:styles": "parcel watch src/styles/style.scss --out-dir public/dist --target browser",
    "watch:client": "parcel watch src/client/client.ts --out-dir public/dist --target browser",
    "watch:nodemon": "nodemon",
    "format": "prettier --write src/**/*.{js,ts,json,css,scss}",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test": "jest",
    "db:seed": "ts-node -O '{\"module\": \"commonjs\"}' ./db/seed.ts",
    "db:reset": "ts-node -O '{\"module\": \"commonjs\"}' ./db/reset.ts",
    "precommit": "yarn lint-staged",
    "prepush": "yarn test",
    "prebuild": "yarn clean",
    "preci": "yarn clean",
    "ci": "run-p ci:**",
    "ci:server": "rollup --config rollup.config.server.js",
    "ci:client": "rollup --config rollup.config.client.js",
    "ci:scss": "node-sass --source-map public/dist/ src/styles/style.scss public/dist/style.css"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "chart.js": "^2.7.2",
    "compression": "^1.7.2",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.3.3",
    "cors": "^2.8.4",
    "csurf": "^1.9.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-validator": "^5.1.2",
    "hashids": "^1.1.4",
    "helmet": "^3.12.0",
    "lodash": "^4.17.10",
    "md5": "^2.2.1",
    "method-override": "^2.3.10",
    "moment": "^2.22.1",
    "mongoose": "^5.0.15",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.0",
    "pug": "^2.0.3",
    "redis": "^2.8.0",
    "validator": "^9.4.1",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/chart.js": "^2.7.14",
    "@types/compression": "^0.0.36",
    "@types/connect-flash": "^0.0.34",
    "@types/connect-redis": "^0.0.7",
    "@types/cors": "^2.8.3",
    "@types/csurf": "^1.9.35",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/hashids": "^1.0.30",
    "@types/helmet": "^0.0.37",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/md5": "^2.1.32",
    "@types/method-override": "^0.0.31",
    "@types/mongoose": "^5.0.10",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.0.0",
    "@types/passport": "^0.4.5",
    "@types/passport-local": "^1.0.33",
    "@types/passport-local-mongoose": "^4.0.11",
    "@types/pug": "^2.0.4",
    "@types/supertest": "^2.0.4",
    "@types/validator": "^9.4.0",
    "@types/winston": "^2.3.9",
    "bulma": "^0.7.1",
    "cross-env": "^5.1.4",
    "cypress": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.7.1",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript2": "^0.13.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  }
}
