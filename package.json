{
  "name": "voting-app-node",
  "description": "Voting app node project made for freeCodeCamp",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:azdanov/voting-app-node.git",
  "author": "Anton Zdanov <azdanov@protonmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=9.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,css,scss}": [
      "yarn format",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "yarn lint-staged",
    "prepush": "yarn test",
    "prebuild": "npm run clean",
    "build": "rollup -c",
    "start": "node ./bundle/index.js",
    "watch": "rollup -c -w",
    "dev": "nodemon",
    "clean": "rimraf ./bundle ./dist",
    "format": "prettier --write src/**/*.{js,ts,json,css,scss}",
    "build:ts": "tsc -p tsconfig.json",
    "watch:ts": "tsc -w -p tsconfig.json",
    "test": "jest"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.1",
    "mongoose": "^5.0.15",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.3",
    "validator": "^9.4.1",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/mongoose": "^5.0.10",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.6",
    "@types/passport": "^0.4.5",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/supertest": "^2.0.4",
    "@types/validator": "^9.4.0",
    "@types/winston": "^2.3.9",
    "debug": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.1",
    "rollup-plugin-typescript2": "^0.13.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  }
}
