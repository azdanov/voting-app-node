    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "1.9.7",
    "parcel-plugin-typescript": "^1.0.0",
    "prettier": "1.14.3",
    "purgecss": "^1.1.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.1"
  }
}
